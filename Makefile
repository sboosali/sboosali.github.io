##################################################
# Makefile Settings & Directives
##################################################

SHELL=bash

.EXPORT_ALL_VARIABLES:

##################################################
# Makefile Customizeable Variables
##################################################

Port?=2666

##################################################

Open?=xdg-open

Python?=python

BaseDirectory?=$(CURDIR)

##################################################
# Targets ########################################
##################################################
default: test

.PHONY: default

##################################################
test: build open

.PHONY: test

##################################################
run: serve

.PHONY: run

##################################################
build: 

.PHONY: build

##################################################
# Fake Targets (never return, or always succeed) #
##################################################
open:
	$(Open) index.html

.PHONY: open

##################################################
serve:
	$(Python) -m SimpleHTTPServer $(Port)

.PHONY: serve

##################################################